<section data-section-id="{{ section.id }}" data-section-type="product">
  
  <div class="container mt-4">
    <div class="row">
        <div class="col-md-7">

          {%- assign current_variant = product.selected_or_first_available_variant -%}
          {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
        
            <div class="product-slider">
              {% if product.images.size > 1 %}
                  {% for image in product.images %}
                    <div>
                      <a href="{{ image.src | img_url: '480x480' }}" data-thumbnail-id="{{ image.id }}" data-product-single-thumbnail{% if featured_image == image %} aria-current="true"{% endif %}>
                        <img class="img-fluid" src="{{ image.src | img_url: '800x600', crop:'center' }}" alt="{{ image.alt | escape }}">
                      </a>
                    </div>
                  {% endfor %}
              {% endif %}
            </div>

            <div class="product-slider-nav mt-4">
                {% if product.images.size > 1 %}
                    {% for image in product.images %}
                        <img class="img-fluid px-3" width="50" src="{{ image.src | img_url: '200x150', crop:'center' }}" alt="{{ image.alt | escape }}">
                    {% endfor %}
                {% endif %} 
            </div>

        </div> <!-- / col -->

        <div class="col-md-5">
                  
            <h1>{{ product.title }}</h1>
           
            <div data-price-wrapper class="my-2">
                <span data-product-price>
                  {{ current_variant.price | money }}
                </span>
          
                {% if product.compare_at_price_max > product.price %}
                  <span class="visually-hidden" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
                  <s data-compare-price>
                    {% if current_variant.compare_at_price > current_variant.price %}
                      {{ current_variant.compare_at_price | money }}
                    {% endif %}
                  </s>
                {% endif %}
            </div>
                   
          
            {% form 'product', product, data-product-form: '', data-product-handle: product.handle, data-enable-history-state: 'true' %}
              {% unless product.has_only_default_variant %}
                {% for option in product.options_with_values %}
                  <div class="js">
                    <div class="form-group">
                        {% if forloop.index0 > 0 %}
                          {% for value in option.values %}
                            <input class="form-control" type="radio" id="Option{{ option.position }}-{{ value }}" name="options[{{ option.name }}]" value="{{ value }}"{% if option.selected_value == value %} checked{% endif %}>
                            <label class="form-label" for="Option{{ option.position }}-{{ value }}">{{ value }}</label>
                          {% endfor %}
                        {% else %}
                          <label class="form-label" for="Option{{ option.position }}">
                            {{ option.name }}
                          </label>
                          <select
                            class="form-control"
                            id="Option{{ option.position }}"
                            name="options[{{ option.name | escape }}]">
                            {% for value in option.values %}
                              <option
                                value="{{ value | escape }}"
                                {% if option.selected_value == value %}selected="selected"{% endif %}>
                                  {{ value }}
                              </option>
                            {% endfor %}
                          </select>
                        {% endif %}

                    </div>

                  </div>
                {% endfor %}
              {% endunless %}
          
              <noscript>
                <select name="id">
                  {% for variant in product.variants %}
                    <option
                      {% if variant == current_variant %}selected="selected"{% endif %}
                      {% unless variant.available %}disabled="disabled"{% endunless %}
                      value="{{ variant.id }}">
                        {{ variant.title }}
                    </option>
                  {% endfor %}
                </select>
              </noscript>
          
              <div class="form-group">
                  <div class="row align-items-end">
                    <div class="col-md-6">
                        <label for="Quantity" class="form-label">{{ 'products.product.quantity' | t }}</label>
                        <input type="number" class="form-control" id="Quantity" name="quantity" value="1" min="1">
                    </div>
                    <div class="col-md-6">
                        <button
                          type="submit"
                          class="btn btn-primary"
                          name="add"
                          data-submit-button
                          {% unless current_variant.available %}disabled="disabled"{% endunless %}>
                            <span data-submit-button-text>
                              {% if current_variant.available %}
                                {{ 'products.product.add_to_cart' | t }}
                              {% else %}
                                {{ 'products.product.sold_out' | t }}
                              {% endif %}
                            </span>
                        </button>

                    </div>
                  </div>
                  

              </div>
            {% endform %}
          
            <div class="rte">
              {{ product.description }}
            </div>
          
            {% if section.settings.show_share_buttons %}
              {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
            {% endif %}
        </div> <!-- / col -->
    </div> <!-- / row -->
  </div>

</section>

{% schema %}
  {
    "name": "Product pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  }
{% endschema %}
